@model IEnumerable<ProjetoBenner.Models.Acesso>

@{
    ViewBag.Title = "";
     if(Session["Codigo_Acesso"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
    if (Session["Codigo_Acesso"] != null)
    {
        if (Session["Tipo"].ToString() != "ADM")
        {
            Response.Redirect("~/Login/Index");
        }
    }

}


    <p>
        <a href="@Url.Action("Create", "Acessoes")">
            <input type="button" value="Cadastrar Novo Administrador" class="btn btn-primary" @*style="margin-top:3%;  width: 80px; height: 40px; color: #fff; background-color: #ff9900; border-color: #ff9900"*@>
        </a>
        
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>

            <a href="@Url.Action("Edit","Acessoes" ,new { id = item.Codigo_Acesso }) ">
                <input type="button" value="Editar" class="btn btn-primary" @*style="margin-top:3%;  width: 80px; height: 40px; color: #fff; background-color: #ff9900; border-color: #ff9900"*@>
            </a>
            <a href="@Url.Action("Details","Acessoes", new { id = item.Codigo_Acesso }) ">
                <input type="button" value="Detalhes" class="btn btn-primary" @*style="margin-top:3%;  width: 80px; height: 40px; color: #fff; background-color: #ff9900; border-color: #ff9900"*@>
            </a>
            <a href="@Url.Action("Delete", "Acessoes", new { id = item.Codigo_Acesso }) ">
                <input type="button" value="Excluir"  class="btn btn-primary" @*style="margin-top:3%;  width: 80px; height: 40px; color: #fff; background-color: #ff9900; border-color: #ff9900"*@>
            </a>



            @*@Html.ActionLink("Editar", "Edit", new { id = item.Codigo_Acesso }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Codigo_Acesso }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Codigo_Acesso })*@
        </td>
    </tr>
}

</table>
