@model ProjetoBenner.Models.Especialidade
@{
    Layout = null;
     if(Session["Tipo"].ToString() != "ADM")
    {
         Response.Redirect("~/Login/Index");
    }
}
<!DOCTYPE Html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.1">
    <title>Cadastro de Médico</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/CadastroPessoa.css">
   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

</head>
<body>
    <div class="form-container">
        <div class="page-header">
            <h1>Cadastro de Médico</h1>
        </div>
        @using (Html.BeginForm("Especialidade", "CadastroMedico"))
        {
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Preencha com as informações</h4>
                </div>
                <div class="panel-body">
                    <form>
                        <div id="formulario">
                            <div class="row">
                                <div class="form-group col-md-10">
                                    @Html.LabelFor(model => model.Especialidade1, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Especialidade1,new { htmlAttributes = new { @class = "form-control", placeholder = "Especialidade" } })
                                </div>
                                <div class="form-group col-md-6" style="margin-top:23px;">
                                    <button class="btn btn-primary" type="button" id="add-campo" onclick="addClick()">+</button>
                                </div>
                                @*@Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })*@


                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-footer">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
    <script>
    function addClick() {
       

        $("#formulario").append('<style> class="form-group col-md-6"',
            '@Html.LabelFor(model => model.Especialidade1, htmlAttributes: new { @class = "control-label" })',
            '@Html.EditorFor(model => model.Especialidade1,new { htmlAttributes = new { @class = "form-control", placeholder = "Especialidade" } })',
            '</div>');
        }
    </script>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/validacao_ptbr.js"></script>
    <script src="~/Scripts/mascaras.js"></script>
</body>
</html>